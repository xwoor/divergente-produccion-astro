---
import logo1 from '/public/clientes/icono-01.png';
import logo2 from '/public/clientes/icono-02.png';
import logo3 from '/public/clientes/icono-03.png';
import logo4 from '/public/clientes/icono-04.png';
import logo5 from '/public/clientes/icono-05.png';
import logo6 from '/public/clientes/icono-06.png';

const logos = [logo1, logo2, logo3, logo4, logo5, logo6];
---

<section class="clientes-section">
    <div class="container">
      <h2 class="clientes-titulo">marcas quE sE conviertEn En amigos</h2>
      <div class="slider">
        <div class="slide-track">
          {logos.concat(logos).map((logo) => (
            <div class="slide">
              <img src={logo.src} alt="Logo cliente" loading="lazy" />
            </div>
          ))}
        </div>
      </div>
    </div>
  
    <style>
      .clientes-section {
        width: 100%;
        overflow: hidden;
        background-color: #000; /* FONDO NEGRO */
        padding: 4rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
  
      .container {
        width: 100%;
        max-width: 1200px;
        padding: 0 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
  
      .clientes-titulo {
        font-size: 1.5rem;
        margin-bottom: 3rem;
        color: #00CAD3;
        font-family: 'Breymont-light', sans-serif;
        letter-spacing: 3px;
        text-align: center;
      }
  
      .slider {
        width: 100vw;
        position: relative;
        overflow: hidden;
      }
  
      .slide-track {
        display: flex;
        width: calc(250px * 12); /* 6 logos * 2 */
        animation: scroll 20s linear infinite;
      }
  
      .slide {
        width: 250px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-shrink: 0;
      }
  
      .slide img {
        height: auto;
        width: auto;
        object-fit: contain;
      }
  
      @keyframes scroll {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-50%);
        }
      }
  
      /* Responsive ajustes */
      @media (max-width: 768px) {
        .slide {
          width: 180px;
        }
        .slide-track {
          width: calc(180px * 12);
        }
      }
  
      @media (max-width: 480px) {
        .slide {
          width: 200px;
        }
        .slide-track {
          width: calc(140px * 12);
        }
        .clientes-titulo {
          font-size: 1.5rem;
        }
      }
    </style>
  </section>
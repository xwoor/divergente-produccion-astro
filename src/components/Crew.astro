import team_mario from "/public/images/team/team_mario.png";


const teamMembers = [
  {
    duration: 0,
    name: 'Javi',
    position: 'ceo',
    image: team_javi,
    txt: "/images/team/txt_javi.png"
  },
  {
    duration: 0,
    name: 'Ana',
    position: 'cfo',
    image: team_ana,
    txt: "/images/team/txt_ana.png"
  },
  {
    duration: 1,
    name: 'Juan',
    position: 'coo',
    image: team_juan,
    txt: "/images/team/txt_juan.png"
  },
  {
    duration: 1,
    name: 'Pierre',
    position: 'grtE. compras',
    image: team_pierre,
    txt: "/images/team/txt_pierre.png"
  },
  {
    duration: 2,
    name: 'Richie',
    position: 'dt. producción',
    image: team_richie,
    txt:  "/images/team/txt_richie.png"
  },
  {
    duration: 2,
    name: 'Jony',
    position: 'dt. crEATIVO',
    image: team_jony,
    txt: "/images/team/txt_jony.png"
  },
  {
    duration: 2,
    name: 'Mario',
    position: 'web dev / seo',
    image: team_mario,
    txt: "/images/team/txt_mario.png"
  },

---
import logo1 from '/public/clientes/icono-1.svg';
import logo2 from '/public/clientes/icono-2.svg';
import logo3 from '/public/clientes/icono-3.svg';
import logo4 from '/public/clientes/icono-4.svg';
import logo5 from '/public/clientes/icono-5.svg';
import logo6 from '/public/clientes/icono-6.svg';
import logo7 from '/public/clientes/icono-7.svg';
import logo8 from '/public/clientes/icono-8.svg';
import logo9 from '/public/clientes/icono-9.svg';
import logo10 from '/public/clientes/icono-10.svg';
import logo11 from '/public/clientes/icono-11.svg';

const logos = [logo1, logo2, logo3, logo4, logo5, logo6, logo7, logo8, logo9, logo10, logo11];
const repeatedLogos = [
  ...logos, ...logos, ...logos,...logos, ...logos, 
  ...logos, ...logos,...logos, ...logos, ...logos, 
  ...logos, ...logos, ...logos,...logos, ...logos, 
  ...logos, ...logos,...logos, ...logos, ...logos
];

---
<section class="clientes-section">
    <div class="">
      <h2 class="clientes-titulo">marcas quE sE conviertEn En amigos</h2>
      <div class="slider">
        <div class="slide-track">
          {repeatedLogos.map((logo) => (
            <div class="slide">
              <img src={logo.src} alt="Logo cliente" loading="lazy" />
            </div>
          ))}
        </div>
      </div>
    </div>
</section>

<style>
  .clientes-section {
    width: 100%;
    overflow: hidden;
    background-color: #000;
    padding: 5rem 0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    text-align: center;
  }

  .clientes-titulo {
    width: 100%;
    max-width: 1000px;
    text-align: center;
    margin: auto;
    font-size: 1.5rem;
    margin-bottom: 3rem;
    color: #00CAD3;
    font-family: 'Breymont-light', sans-serif;
    letter-spacing: 3px;
  }

  .slider {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .slide-track {
    display: flex;
    animation: scroll 160s linear infinite; /* MÃ¡s lento */
    gap: 3rem;
  }

  .slide {
    flex: 0 0 200px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slide img {
    max-width: 100%;
    height: 50px;
    object-fit: contain;
    -webkit-user-drag: none;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .slide {
      flex: 0 0 150px;
    }
    .clientes-titulo {
      max-width: 360px;
      text-align: center;
      margin-bottom: 20px;
      font-size: 1.2rem;
    }
  }
</style>

